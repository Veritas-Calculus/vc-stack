# Environment Variables Configuration for VC Stack

# WARNING: This is a template file. Copy to .env and update with your values.
# NEVER commit .env files to version control!

# ========================================
# Security Configuration
# ========================================

# Admin Default Password (CHANGE THIS!)
# If not set, a random password will be generated on first start
ADMIN_DEFAULT_PASSWORD=

# JWT Secret (REQUIRED - Generate with: openssl rand -base64 64)
IDENTITY_JWT_SECRET=

# ========================================
# Database Configuration
# ========================================

DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=vcstack
DATABASE_USER=vcstack
DATABASE_PASSWORD=
DATABASE_SSLMODE=require  # Use 'require' or 'verify-full' in production
DATABASE_MAX_IDLE_CONNS=10
DATABASE_MAX_OPEN_CONNS=100

# ========================================
# Server Configuration
# ========================================

SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15m
SERVER_WRITE_TIMEOUT=60m

# ========================================
# Sentry Configuration (Optional)
# ========================================

SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACE_SAMPLE_RATE=0.1
SENTRY_DEBUG=false

# ========================================
# Redis Configuration (Optional)
# ========================================

REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# Logging Configuration
# ========================================

LOGGING_LEVEL=info  # debug, info, warn, error
LOGGING_FORMAT=json  # json or text
LOGGING_OUTPUT=stdout  # stdout or file path

# ========================================
# Network Configuration (OVN)
# ========================================

NETWORK_OVN_NB_ADDRESS=tcp:localhost:6641
NETWORK_OVN_SB_ADDRESS=tcp:localhost:6642

# ========================================
# Scheduler Configuration
# ========================================

SCHEDULER_HOST=localhost
SCHEDULER_PORT=8083

# ========================================
# Rate Limiting
# ========================================

RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=20
