# Environment variables for VC Stack Controller
# Copy to /etc/vc-stack/controller.env and customize

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=vcstack
DATABASE_USER=vcstack
DATABASE_PASSWORD=vcstack123
DATABASE_SSLMODE=disable
DATABASE_AUTO_MIGRATE=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# JWT Secret (CHANGE THIS IN PRODUCTION!)
IDENTITY_JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
IDENTITY_JWT_ACCESS_EXPIRES=24h
IDENTITY_JWT_REFRESH_EXPIRES=168h

# OVN Configuration
NETWORK_OVN_NB_ADDRESS=tcp:127.0.0.1:6641
NETWORK_OVN_SB_ADDRESS=tcp:127.0.0.1:6642

# Scheduler Configuration
SCHEDULER_ALGORITHM=least_allocated
SCHEDULER_CPU_OVERCOMMIT=2.0
SCHEDULER_RAM_OVERCOMMIT=1.5

# Logging
LOGGING_LEVEL=info
LOGGING_FORMAT=json
LOGGING_OUTPUT=stdout

# Sentry Error Tracking
SENTRY_DSN=https://your-dsn@sentry.infra.plz.ac/project-id
SENTRY_ENVIRONMENT=production
# Optional: Override auto-detected hostname
# SENTRY_SERVER_NAME=vc-controller-01

# Monitoring
MONITORING_METRICS_ENABLED=true
MONITORING_METRICS_PORT=9090

# Redis (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS (for web console)
SECURITY_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Features
FEATURES_MULTI_TENANCY_ENABLED=true
FEATURES_QUOTAS_ENABLED=true
