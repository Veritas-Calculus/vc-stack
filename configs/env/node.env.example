# Environment variables for VC Stack Node
# Copy to /etc/vc-stack/node.env and customize

# Node Configuration
NODE_NAME=compute-node-1
NODE_ZONE=zone-1

# Agent Configuration (auto-registration)
AGENT_ENABLED=true
AGENT_CONTROLLER_URL=http://10.31.0.3:8080
AGENT_HEARTBEAT_INTERVAL=30s

# Database (for network state lookup)
DATABASE_HOST=10.31.0.3
DATABASE_PORT=5432
DATABASE_NAME=vcstack
DATABASE_USER=vcstack
DATABASE_PASSWORD=vcstack123
DATABASE_SSLMODE=disable

# Libvirt Configuration
LIBVIRT_URI=qemu:///system
LIBVIRT_NETWORK_NAME=br-int

# Storage Backend (local, rbd, nfs)
STORAGE_DEFAULT_BACKEND=local
STORAGE_LOCAL_POOL_PATH=/var/lib/libvirt/images

# Ceph/RBD (if using Ceph storage)
STORAGE_RBD_ENABLED=false
STORAGE_RBD_MONITORS=10.31.0.3:6789,10.31.0.4:6789,10.31.0.5:6789
STORAGE_RBD_USER=admin
STORAGE_RBD_SECRET_UUID=your-ceph-secret-uuid
STORAGE_RBD_KEYRING=/etc/ceph/ceph.client.admin.keyring
STORAGE_RBD_CONF=/etc/ceph/ceph.conf
STORAGE_RBD_IMAGES_POOL=images
STORAGE_RBD_VOLUMES_POOL=volumes

# Network Plugin (OVN)
NETWORK_OVN_SB_ADDRESS=tcp:10.31.0.3:6642
NETWORK_INTEGRATION_BRIDGE=br-int
NETWORK_EXTERNAL_BRIDGE=br-provider

# Logging
LOGGING_LEVEL=info
LOGGING_FORMAT=json
LOGGING_OUTPUT=stdout

# Sentry Error Tracking
SENTRY_DSN=https://your-dsn@sentry.infra.plz.ac/project-id
SENTRY_ENVIRONMENT=production
# Optional: Override auto-detected hostname
# SENTRY_SERVER_NAME=vc-node-01

# Monitoring
MONITORING_METRICS_ENABLED=true
MONITORING_METRICS_PORT=9091

# Resource Configuration
RESOURCES_CPU_OVERCOMMIT=2.0
RESOURCES_RAM_OVERCOMMIT=1.5
RESOURCES_RESERVED_CPU=2
RESOURCES_RESERVED_RAM_MB=4096
RESOURCES_RESERVED_DISK_GB=50
